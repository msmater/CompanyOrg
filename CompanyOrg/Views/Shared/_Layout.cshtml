<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Struktura Organizacyjna v 0.01</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width" />
        <script src="~/Scripts/gridmvc.js" type="text/javascript"></script>
        <script src="~/Scripts/gridmvc.min.js" type="text/javascript"></script>

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/Gridmvc.css")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title logo">@Html.ActionLink("Orlen", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        Hello, <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Struktura", "Index", "Struct")</li>
                            <li>@Html.ActionLink("Użytkownicy", "Index", "Users")</li>
                            <li>@Html.ActionLink("Komputery", "Index", "Computers")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix"> 
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Struktura Organizacyjna v 0.01</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
